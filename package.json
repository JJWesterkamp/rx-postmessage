{
  "name": "rx-postmessenger",
  "version": "1.0.3",
  "author": "Jeffrey Westerkamp",
  "repository": "git+https://github.com/JJWesterkamp/rx-postmessenger.git",
  "description": "Minimal RxJS wrapper around the window.postMessage API for both passive (request-response) and active (notification) streams across frame windows.",
  "keywords": [
    "RxJS",
    "Browser",
    "iframe",
    "postMessage",
    "event",
    "request",
    "response",
    "mapped",
    "typescript"
  ],
  "license": "MIT",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./rx-postmessenger.d.ts",
  "scripts": {
    "dev": "run-p \"build:** -- --watch\"",
    "build": "run-p build:**",
    "build:cjs": "tsc",
    "build:esm": "tsc -m es6 --outDir esm",
    "build:umd": "webpack",
    "clean:dist": "rm -rf esm cjs umd",
    "copy:interface": "run-p copy:interface:*",
    "copy:interface:cjs": "mkdir cjs/interface/ && cp -rf ./src/interface/*.d.ts cjs/interface/",
    "copy:interface:esm": "mkdir esm/interface/ && cp -rf ./src/interface/*.d.ts esm/interface/",
    "lint": "run-p lint:**",
    "lint:source": "tslint -c tslint.json 'src/**/*.ts' --fix",
    "lint:declaration": "tslint -c tslint.json '*.d.ts' --fix",
    "postbuild": "npm run copy:interface",
    "prebuild": "npm run clean:dist",
    "prepublish": "npm-run-all lint build",
    "test": "karma start karma.conf.js",
    "test:ci": "karma start --single-run --no-auto-watch --reporters mocha karma.conf.js"
  },
  "dependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^5.0.7",
    "rxjs": "^5.5.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "karma": "^3.1.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sinon": "^1.0.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.5",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.2",
    "sinon": "^7.1.1",
    "ts-loader": "^5.3.0",
    "tslint": "^5.8.0",
    "typescript": "^3.1.6",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2"
  }
}
