{
  "name": "rx-postmessenger",
  "version": "1.0.4",
  "author": "Jeffrey Westerkamp",
  "repository": "git+https://github.com/JJWesterkamp/rx-postmessenger.git",
  "description": "Minimal RxJS adapter for the window.postMessage API for request-response streams and notification streams across frame windows.",
  "keywords": [
    "RxJS",
    "Browser",
    "iframe",
    "postMessage",
    "event",
    "request",
    "response",
    "mapped",
    "typescript"
  ],
  "license": "MIT",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./rx-postmessenger.d.ts",
  "scripts": {
    "dev": "run-p \"build:** -- --watch\"",
    "build": "run-p build:**",
    "build:cjs": "tsc",
    "build:esm": "tsc -m es6 --outDir esm",
    "build:umd": "webpack",
    "clean:dist": "rm -rf esm cjs umd",
    "clean:coverage": "rm -rf coverage",
    "lint": "run-p lint:**",
    "lint:source": "tslint -c tslint.json 'src/**/*.ts' --fix",
    "lint:test": "tslint -c tslint.json 'test/**/*.ts' --fix",
    "lint:declaration": "tslint -c tslint.json '*.d.ts' --fix",
    "prebuild": "npm run clean:dist",
    "prepublishOnly": "npm-run-all lint test:ci build",
    "test": "karma start karma.conf.js",
    "test:ci": "karma start --single-run --no-auto-watch karma.conf.js"
  },
  "dependencies": {
    "rxjs": "^6"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^5.0.7",
    "@types/webpack": "^4.4.19",
    "@types/webpack-env": "^1.13.6",
    "chai": "^4.2.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "karma": "^3.1.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-coveralls": "^2.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-remap-coverage": "^0.1.5",
    "karma-sinon": "^1.0.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.5",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.2",
    "sinon": "^7.1.1",
    "ts-loader": "^5.3.0",
    "tslint": "^5.8.0",
    "typescript": "^3.1.6",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2"
  }
}
