{
  "name": "rx-postmessenger",
  "version": "0.1.12",
  "author": "Jeffrey Westerkamp",
  "description": "Minimal RxJS wrapper around the window.postMessage interface for both passive (request-response) and active (notification) streams across frame windows.",
  "repository": "git+https://github.com/JJWesterkamp/rx-postmessenger.git",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "module": "./esm/index.js",
  "keywords": [
    "RxJS",
    "Browser",
    "iframe",
    "postMessage",
    "event",
    "request",
    "response"
  ],
  "scripts": {
    "lint": "tslint \"./src/**/*.ts\"",
    "dev": "run-p \"build:** -- --watch\"",
    "build": "run-p build:**",
    "build:cjs": "tsc --declaration",
    "build:esm": "tsc -m es6 --outDir esm",
    "build:umd": "webpack",
    "prepublish": "npm run build",
    "publish-patch": "npm version patch && npm publish --access=public && git push",
    "publish-minor": "npm version minor && npm publish --access=public && git push",
    "publish-major": "npm version major && npm publish --access=public && git push"
  },
  "dependencies": {
    "lodash-es": "^4.17.4",
    "ramda": "^0.25.0",
    "rxjs": "^5.5.2"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.0",
    "@types/ramda": "^0.25.9",
    "awesome-typescript-loader": "^3.4.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "npm-run-all": "^4.1.2",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "webpack": "^3.8.1"
  }
}
